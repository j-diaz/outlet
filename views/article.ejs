<% include header %>
 
    <% if(article){ %>
   
            <!-- A wrapper for all the blog posts -->
            <div class="posts">
                <h1 class="content-subhead">Pinned Post</h1>

                <!-- A single blog post -->
                <section class="post">
                    <header class="post-header">
                        <img class="post-avatar" alt="Tilo Mitra&#x27;s avatar" height="48" width="48" src="img/common/tilo-avatar.png">

                        <h2 class="post-title"><%= article.title %></h2>

                        <p class="post-meta">
                            By <a href="#" class="post-author"><%= article.author %></a> under <a class="post-category post-category-design" href="#">CSS</a> <a class="post-category post-category-pure" href="#">Pure</a>
                        </p>
                    </header>

                    <div class="post-description">
                        <p>
                           <%= article.body %>
                        </p>
                    </div>
                </section>
            </div>
            <!-- /news section -->
            <%  } else { %>
             This article is temporarily unavailable <a href="/post">here</a>
        <% } %>
            

<% include footer %>
