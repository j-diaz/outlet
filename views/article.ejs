<% include header %>
 
    <% if(article){ %>
   
            <!-- A wrapper for all the blog posts -->
            <div class="posts">
                <h1 class="content-subhead"></h1>

                <!-- A single blog post -->
                <section class="post">
                    <header class="post-header">
                    
                        <h2 class="post-title"><%= article.title %></h2>

                        <p class="post-meta">
                       	    By <a href="#" class="post-author"><%= article.author %></a> on
                            <%=article.createdAt.getFullYear()%>/<%=article.createdAt.getMonth()%>/<%=article.createdAt.getDay()%>
			</p>
                    </header>

                    <div class="post-description">
                        <p><%= article.preview %></p>
                         <!-- display each article element e.g. parragraph, img -->
                           <% article.body.forEach(function(elem){   %>
                           <%     var a = Object.keys(elem);         %>
                           <%                                        %>
                           <%     var name = a[0];                   %>        
                           <%-    elem[name]                         %>  
                           <% }); %>
                        
                    </div>
                </section>
            </div>
            <!-- /news section -->
            <%  } else { %>
             This article is temporarily unavailable <a href="/post">here</a>
        <% } %>
            
<div id="disqus_thread"></div>
<script type="text/javascript">
    /* * * CONFIGURATION VARIABLES * * */
    var disqus_shortname = 'blogducktaped';
    
    /* * * DON'T EDIT BELOW THIS LINE * * */
    (function() {
        var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
        dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
        (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
    })();
</script>
